@model IEnumerable<Category>

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Responsive Hover Table</h3>

                        <div class="card-tools">
                            <div class="input-group input-group-sm" style="width: 150px;">
                                <a asp-action="Create" asp-controller="Category" asp-area="Admin" class="btn btn-primary">Add Category</a>
                            </div>
                        </div>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body table-responsive p-0">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Category Name</th>
                                    <th>Image</th>
                                    <th>Action</th>
                                    
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.CatName</td>
                                        <td>
                                            <img src="~/category/@item.CatPhoto" style="width:150px;height150px;" />
                                        </td>
                                        <td>
                                            <a class="btn btn-outline-primary" asp-action="Edit" asp-controller="Category" asp-route-id="@item.CatId" asp-area="Admin">Edit</a>
                                            <a class="btn btn-outline-danger" asp-action="Delete" asp-controller="Category" asp-route-id="@item.CatId" asp-area="Admin">Delete</a>

                                        </td>
                                    </tr>
                                }
                                
                            </tbody>
                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
        </div>
        </div>
</div>