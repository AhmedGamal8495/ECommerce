@model Product
<div class="content">
    <div class="container-fluid">
        <div class="col-md-6">
            <!-- general form elements -->
            <div class="card card-primary">
                <div class="card-header">
                    <h3 class="card-title">Edit</h3>
                </div>
                <!-- /.card-header -->
                <!-- form start -->
                <form role="form" asp-action="Edit" method="post" enctype="multipart/form-data">
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="ProImage" />

                    <div class="card-body">
                        <div class="form-group">
                            <label for="exampleInputEmail1">product Name</label>
                            <input type="text" class="form-control"
                                   asp-for="ProName"
                                   value="@Model.ProName">
                        </div>

                        <div class="form-group">
                            <label for="exampleInputEmail1">Category</label>
                            <select type="text" class="form-control" asp-for="CatId"
                                    asp-items="ViewBag.categoryname">
                            </select>
                        </div>

                        <div class="form-group">
                            <label for="exampleInputEmail1">Description</label>
                            <input type="text" asp-for="Description"
                                   class="form-control"
                                   value="@Model.Description" />
                        </div>

                        <div class="form-group">
                            <label for="exampleInputEmail1">product price</label>
                            <input type="text" asp-for="Price"
                                   class="form-control"
                                   value="@Model.Price">
                        </div>

                        <div class="form-group">
                            <label for="exampleInputFile">Replace product Image</label>
                            <div class="input-group">
                                <div class="custom-file">
                                    <input type="file" class="custom-file-input" name="file" asp-for="file">
                                    <label class="custom-file-label">Choose file</label>
                                </div>
                            </div>
                        </div>

                    </div>
                    <!-- /.card-body -->

                    <div class="card-footer">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </form>
            </div>


        </div>
    </div>
</div>

