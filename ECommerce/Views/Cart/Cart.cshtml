@model List<ShoppingCart>
@{
    ViewData["Title"] = "Cart";
}

<!-- Cart Start -->
<div class="container-fluid">
    <div class="row px-xl-5">
        <div class="col-lg-8 table-responsive mb-5">
            <table class="table table-light table-borderless table-hover text-center mb-0">
                <thead class="thead-dark">
                    <tr>
                        <th>Image</th>
                        <th>Name</th>
                        <th>Price</th>
                        <th>Quantity</th>
                        <th>Total</th>
                        <th>Remove</th>
                    </tr>
                </thead>
                <tbody class="align-middle">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="align-middle">
                                <img src="~/product/@item.products.ProImage" alt="" style="width: 50px;">
                            </td>
                            <td class="align-middle">@item.products.ProName</td>
                            <td class="align-middle">@item.products.Price</td>
                            <td class="align-middle">
                                <input type="text" readonly class="form-control form-control-sm bg-secondary border-0 text-center" value="@item.Qty">
                            </td>
                            <td class="align-middle">$@(item.products.Price * item.Qty)</td>

                            <td class="align-middle">
                                <form asp-action="RemoveItem" asp-controller="Cart" asp-route-id="@item.CartId" method="post">
                                    <button type="submit" class="btn btn-sm btn-danger">
                                        <i class="fa fa-times"></i>
                                    </button>
                                </form>
                                
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
        <div class="col-lg-4">

            <h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3">Cart Summary</span></h5>
            <div class="bg-light p-30 mb-5">
                <div class="border-bottom pb-2">
                    <div class="d-flex justify-content-between mb-3">
                        <h6>Subtotal</h6>
                        <h6>$150</h6>
                    </div>
                    <div class="d-flex justify-content-between">
                        <h6 class="font-weight-medium">Shipping</h6>
                        <h6 class="font-weight-medium">$10</h6>
                    </div>
                </div>
                <div class="pt-2">
                    <div class="d-flex justify-content-between mt-2">
                        <h5>Total</h5>
                        <h5>$160</h5>
                    </div>
                    <button class="btn btn-block btn-primary font-weight-bold my-3 py-3">Save</button>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Cart End -->